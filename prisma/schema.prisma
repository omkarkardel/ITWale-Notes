// Prisma schema for SPPU Notes Shop — MongoDB

generator client {
  provider = "prisma-client-js"
  // Use binary engine on Windows to avoid occasional file rename EPERM issues
  engineType = "binary"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user") // 'user' | 'admin'
  createdAt DateTime @default(now())
  purchases Purchase[]
  orders    Order[]
}

model Subject {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  year      String   // SE | TE | BE
  semester  Int // 3..8
  units     Unit[]
  createdAt DateTime @default(now())
  @@index([year, semester])
}

model Unit {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  subject    Subject    @relation(fields: [subjectId], references: [id])
  subjectId  String     @db.ObjectId
  unitNumber Int // 1..6
  examType   String   // INSEM | ENDSEM
  resources  Resource[]
  @@unique([subjectId, unitNumber])
}

model Resource {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  unit        Unit         @relation(fields: [unitId], references: [id])
  unitId      String       @db.ObjectId
  title       String
  type        String       // HANDWRITTEN | QUESTION_BANK | BOOK | DECODE | PAPER | SOLUTION
  price       Int          @default(0) // price in INR paise (e.g., 4999 = ₹49.99)
  filePath    String?      // local path under /uploads
  createdAt   DateTime     @default(now())
  purchases   Purchase[]
  orderItems  OrderItem[]
}

model Order {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  user        User         @relation(fields: [userId], references: [id])
  userId      String       @db.ObjectId
  status      String       @default("PENDING") // PENDING | PAID | CANCELLED
  amountPaise Int          @default(0)
  upiIntent   String?
  gateway     String       @default("PHONEPE") // PHONEPE | UPI | RAZORPAY
  providerOrderId  String?
  providerPaymentId String?
  providerSignature String?
  createdAt   DateTime     @default(now())
  paidAt      DateTime?
  items       OrderItem[]
}

model OrderItem {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  order      Order    @relation(fields: [orderId], references: [id])
  orderId    String   @db.ObjectId
  resource   Resource @relation(fields: [resourceId], references: [id])
  resourceId String   @db.ObjectId
  pricePaise Int
}

model Purchase {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @db.ObjectId
  resource   Resource @relation(fields: [resourceId], references: [id])
  resourceId String   @db.ObjectId
  createdAt  DateTime @default(now())
  @@unique([userId, resourceId])
}
