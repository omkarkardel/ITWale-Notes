# Database (MongoDB only)
DATABASE_URL="mongodb+srv://USER:PASS@CLUSTER/dbname?retryWrites=true&w=majority"

# JWT
JWT_SECRET="super-secret-change-me"
JWT_EXPIRES_IN_DAYS=7

# Admin bootstrap
# Change these before first run in production
ADMIN_EMAIL="omkarvilas.kardel@gmail.com"
ADMIN_PASSWORD="admin123"

# Public app URL for links in emails (e.g., https://yourdomain.com)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
# Notifications (SMTP)
# Note: By default, the app uses an Ethereal test inbox via Nodemailer (no real emails, but preview links are available).
# To send real emails, set MAIL_USE_SMTP=true and configure the SMTP_* variables below.
MAIL_USE_SMTP=false
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="user@example.com"
SMTP_PASS="password"
ADMIN_NOTIFY_EMAIL="owner@example.com"

# CSRF/CORS
# Add your frontend origins when frontend and API run on different domains
ALLOWED_CSRF_ORIGINS="http://localhost:3000"

# AWS S3 (optional)
# To use S3, set S3_ENABLED=true and configure credentials below. Otherwise files are stored locally in /uploads.
S3_ENABLED=false
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="ap-south-1"
S3_BUCKET="your-bucket-name"
S3_PREFIX="uploads"
